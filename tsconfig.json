{
    "compilerOptions": {
        "target": "es2017",
        "module": "commonjs",
        "lib": [
            "es2017",
            "es2018",
            "es2019",
            "es2020"
        ],
        "declaration": true,
        "removeComments": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "sourceMap": true,
        "outDir": "./dist",
        "baseUrl": "./",
        "incremental": true,
        "skipLibCheck": true,
        "strict": true,
        "noImplicitAny": false,
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "strictBindCallApply": true,
        "strictPropertyInitialization": false,
        "noImplicitThis": true,
        "alwaysStrict": true,
        "paths": {
            "@modules/*": [
                "src/modules/*"
            ],
            "@domain/*": [
                "src/shared/domain/*"
            ],
            "@application/*": [
                "src/shared/application/*"
            ],
            "@infrastructure/*": [
                "src/shared/infrastructure/*"
            ],
            "@presentation/*": [
                "src/shared/presentation/*"
            ],
            "@auth/*": [
                "src/modules/auth/*"
            ],
            "@auth/domain/*": [
                "src/modules/auth/domain/*"
            ],
            "@auth/application/*": [
                "src/modules/auth/application/*"
            ],
            "@auth/infrastructure/*": [
                "src/modules/auth/infrastructure/*"
            ],
            "@auth/presentation/*": [
                "src/modules/auth/presentation/*"
            ],
            "@user/*": [
                "src/modules/user/*"
            ],
            "@user/domain/*": [
                "src/modules/user/domain/*"
            ],
            "@entities/*": [
                "src/domain/entities/*"
            ],
            "@interfaces/*": [
                "src/domain/interfaces/*"
            ],
            "@repositories/*": [
                "src/shared/domain/repositories/*"
            ],
            "@value-objects/*": [
                "src/modules/auth/domain/value-objects/*"
            ],
            "@constants/*": [
                "src/shared/domain/constants/*"
            ],
            "@use-cases/*": [
                "src/application/use-cases/*"
            ],
            "@controllers/*": [
                "src/presentation/controllers/*"
            ],
            "@guards/*": [
                "src/modules/auth/presentation/guards/*"
            ],
            "@gateways/*": [
                "src/presentation/gateways/*"
            ],
            "@services/*": [
                "src/modules/auth/infrastructure/services/*"
            ],
            "@repositories-impl/*": [
                "src/infrastructure/repositories/*"
            ],
            "@config/*": [
                "src/config/*"
            ]
        }
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "**/*spec.ts"
    ]
}